<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:tb="http://www.hardcodet.net/taskbar" x:Class="DrKCrazyAttendance_Student.MainWindow"
        Visibility="Visible" Loaded="Window_Loaded" ShowInTaskbar="False" WindowState="Minimized">
    <tb:TaskbarIcon x:Name="myNotifyIcon"
                    Visibility="Visible"
                    ToolTipText="NESCC Attendance Manager"
                    IconSource="icon.ico">
        <tb:TaskbarIcon.ContextMenu>
            <ContextMenu>
                <MenuItem x:Name="menuItemAttendance" Header="Take Attendance" Click="MenuItem_Attendance_Click"/>
                <MenuItem x:Name="menuItemSettings" Header="Settings" Click="MenuItem_Settings_Click">
                    <MenuItem.Icon>
                        <Image x:Name="uacImage" Width="16" Height="16"/>
                    </MenuItem.Icon>
                </MenuItem>
            </ContextMenu>
        </tb:TaskbarIcon.ContextMenu>
    </tb:TaskbarIcon>
</Window>
