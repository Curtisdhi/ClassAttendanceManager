        <TextBox x:Name="txtstuID1" HorizontalAlignment="Left" Height="21" Margin="27.644,27,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="30" Text="900" IsEnabled="False" Grid.ColumnSpan="4" Grid.Column="1"/>
        <TextBox x:Name="txtConID1" HorizontalAlignment="Left" Height="21" Margin="27.644,58,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="30" Text="900" IsEnabled="False" Grid.ColumnSpan="4" Grid.Column="1"/>
        <Menu Height="28" VerticalAlignment="Top" Margin="0,-10,0,0" Grid.ColumnSpan="5">
            <MenuItem x:Name="menuHelp" Header="Help" Click="menuHelp_Click"/>
        </Menu>

    </Grid>
</Window>
