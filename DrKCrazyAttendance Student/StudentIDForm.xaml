<Window x:Class="DrKCrazyAttendance_Student.StudentIDForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Request Student ID" Height="179.258" Width="255.32" Icon="icon.ico">
    <Grid Margin="0,10,0,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="65*"/>
            <ColumnDefinition Width="53*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="129*"/>
        </Grid.ColumnDefinitions>
        <Label Content="Student ID" HorizontalAlignment="Left" Margin="20,23,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2"/>
        <TextBox x:Name="txtstuID2" HorizontalAlignment="Left" Height="21" Margin="12,27,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="30" TextChanged="txtId_TextChanged" Grid.Column="2" Grid.ColumnSpan="3"/>
        <TextBox x:Name="txtstuID3" HorizontalAlignment="Left" Height="21" Margin="57,28,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="30" RenderTransformOrigin="0.548,0.581" TextChanged="txtId_TextChanged" Grid.Column="2" Grid.ColumnSpan="3"/>
        <Label Content="Confirm ID" HorizontalAlignment="Left" Margin="20,54,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2"/>
        <TextBox x:Name="txtConID2" HorizontalAlignment="Left" Height="21" Margin="12,59,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="30" TextChanged="txtId_TextChanged" Grid.Column="2" Grid.ColumnSpan="3"/>
        <TextBox x:Name="txtConID3" HorizontalAlignment="Left" Height="21" Margin="58,59,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="29" RenderTransformOrigin="0.548,0.581" TextChanged="txtId_TextChanged" Grid.Column="2" Grid.ColumnSpan="3"/>
