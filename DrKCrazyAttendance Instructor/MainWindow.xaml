<Window x:Class="DrKCrazyAttendance_Instructor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="DrkCrazyAttendance Manager" Height="346" Width="529" WindowStartupLocation="CenterScreen" Icon="icon.ico" Loaded="Window_Loaded" Closing="Window_Closing">
    <Grid Margin="0,0,2,0">
        <Menu Height="28" VerticalAlignment="Top" Margin="0,0,-2,0">
            <MenuItem x:Name="menuFile" Header="File">
                <MenuItem x:Name="menuClose" Header="Close" RenderTransformOrigin="0.846,0.625" Click="menuClose_Click"/>
            </MenuItem>
            <MenuItem x:Name="menuSettings" Header="Settings" Click="menuSettings_Click"/>
        </Menu>
        <Grid Margin="0,28,-2,0" Background="#FFEAEAEA" Height="Auto">
            <ListView x:Name="lstCourses" Margin="17,37,17,54">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Classroom" DisplayMemberBinding="{Binding Classroom}" Width="70"/>
                        <GridViewColumn Header="Course" Width="100" DisplayMemberBinding="{Binding CourseName}"/>
                        <GridViewColumn Header="Section" DisplayMemberBinding="{Binding Section}"/>
                        <GridViewColumn Header="Days"  DisplayMemberBinding="{Binding FriendlyDays}" Width="65"/>
                        <GridViewColumn Header="Start Time"  DisplayMemberBinding="{Binding StartTime, StringFormat=\{0:h:mmtt\}}" Width="75"/>
                        <GridViewColumn Header="End Time"  DisplayMemberBinding="{Binding EndTime, StringFormat=\{0:h:mmtt\}}" Width="75"/>
                    </GridView>
                </ListView.View>
            </ListView>
            <DockPanel Height="37" LastChildFill="False" Margin="17,-5,17,0" VerticalAlignment="Top" HorizontalAlignment="Right">
                <Grid Height="37" Width="488">
                    <ComboBox x:Name="classroomCombo" HorizontalAlignment="Left" Margin="32,10,0,0" VerticalAlignment="Top" Width="120" SelectedIndex="0" IsEditable="True">
                        <ComboBoxItem Content="Classroom" IsEnabled="False"/>
                    </ComboBox>
                    <ComboBox x:Name="courseCombo" HorizontalAlignment="Left" Margin="157,10,0,0" VerticalAlignment="Top" Width="120" SelectedIndex="0" IsEditable="True">
                        <ComboBoxItem Content="Course" IsSelected="True" IsEnabled="False"/>
                    </ComboBox>
                    <ComboBox x:Name="sectionCombo" HorizontalAlignment="Left" Margin="282,10,0,0" VerticalAlignment="Top" Width="70" SelectedIndex="0" IsEditable="True">
                        <ComboBoxItem Content="Section" IsEnabled="False"/>
                    </ComboBox>
                    <ComboBox x:Name="daysCombo" HorizontalAlignment="Left" Margin="357,10,0,0" VerticalAlignment="Top" Width="100" SelectedIndex="0" IsEditable="True">
                        <ComboBoxItem Content="Days" IsSelected="True" IsEnabled="False"/>
                        <ComboBoxItem Content="MTWR"/>
                        <ComboBoxItem Content="MW"/>
                        <ComboBoxItem Content="TR"/>
                        <ComboBoxItem Content="F"/>
                        <ComboBoxItem Content="S"/>
                    </ComboBox>
                    <Button x:Name="btnSearch" HorizontalAlignment="Left" Margin="462,11,0,0" VerticalAlignment="Top" Width="24" Height="24">
                        <Image Height="16" Width="16" Source="images/find.png"/>
                    </Button>
                </Grid>
            </DockPanel>
            <DockPanel Height="44" LastChildFill="False" Margin="0,0,17,0" VerticalAlignment="Bottom" Width="487" HorizontalAlignment="Right">
                <Grid Margin="0,0,0,10" HorizontalAlignment="Right" VerticalAlignment="Bottom" Height="29" Width="489">
                    <Button x:Name="btnAdd" Content="Add" HorizontalAlignment="Left" Margin="414,0,0,0" VerticalAlignment="Top" Width="75" Click="btnAdd_Click">
                        <Button.Background>
                            <LinearGradientBrush EndPoint="0,1" StartPoint="0,0">
                                <GradientStop Color="#FFF3F3F3"/>
                                <GradientStop Color="#FFEBEBEB" Offset="0.5"/>
                                <GradientStop Color="#FFDDDDDD" Offset="0.5"/>
                                <GradientStop Color="#FFCDCDCD" Offset="1"/>
                            </LinearGradientBrush>
                        </Button.Background>
                    </Button>
                    <Button x:Name="btnEdit" Content="Edit" HorizontalAlignment="Left" Margin="334,0,0,0" VerticalAlignment="Top" Width="75" Click="btnEdit_Click" RenderTransformOrigin="0.88,0.478">
                        <Button.Background>
                            <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                                <GradientStop Color="#FFF3F3F3"/>
                                <GradientStop Color="#FFEBEBEB" Offset="0.5"/>
                                <GradientStop Color="#FFDDDDDD" Offset="0.5"/>
                                <GradientStop Color="#FFCDCDCD" Offset="1"/>
                            </LinearGradientBrush>
                        </Button.Background>
                    </Button>
                    <Button x:Name="btnDelete" Content="Delete" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Click="btnDelete_Click" RenderTransformOrigin="0.107,0.87" Margin="254,0,0,0">
                        <Button.Background>
                            <LinearGradientBrush EndPoint="0,1" StartPoint="0,0">
                                <GradientStop Color="#FFF3F3F3" Offset="0"/>
                                <GradientStop Color="#FFEBEBEB" Offset="0.5"/>
                                <GradientStop Color="#FFDDDDDD" Offset="0.5"/>
                                <GradientStop Color="#FFCF6D6D" Offset="1"/>
                            </LinearGradientBrush>
                        </Button.Background>
                    </Button>
                </Grid>
            </DockPanel>
        </Grid>

    </Grid>

</Window>
